<div class="messages">
      <div class="message">
        <div class="message_top">
          <div class="message_name">
            <%= message.user.name %>
          </div>
          <div class="message_date">
            <%= l message.created_at %>
          </div>
        </div>
        <div class="message_content">
          <%= message.content %>
        </div>
        <%= image_tag message.image.variant(resize:"200x500") ,class:"message-image" if message.image.attached? %>
      </div>
    </div>
