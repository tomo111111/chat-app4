<div class="main_wrapper">
  <div class="main_top">
    <p class="room_name"><%= @room.name %></p>
    <div class="top_right">
      <%= link_to "チャットを終了する", room_path(@room),method: :delete,class:"chat_end" %>
    </div>
  </div>
  <div class="main_middle">
    <%= render partial:"message",collection:@messages %>
  </div>
  <div class="main_bottom">
    <%= form_with model: [@room,@message], html: {class:"form"},local:true do |f| %>
      <div class="form-input">
        <%= f.text_field :content,class:"form-message",placeholder:"type a messgae" %>
        <label class="form-image">
          <span class="image-file">画像</span>
          <%= f.file_field :image,class:"hidden" %>
        </label>
      </div>
      <%= f.submit "送信", class:"form-submit"%>
    <% end %>
  </div>
</div>